{
  "author": "Chris Shaw <me@cshaw.xyz>",
  "description": "A proxy server and starter kit for using Vite with Adobe Experience Manager.",
  "homepage": "https://aemvite.dev/guide/front-end/vite-plugin/",
  "license": "Apache-2.0",
  "name": "@aem-vite/vite-aem-plugin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aem-vite/vite-aem-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/aem-vite/vite-aem-plugin/issues"
  },
  "version": "5.1.0",
  "type": "module",
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "engines": {
    "node": "^18.0.0 || >=20.10.0",
    "pnpm": ">= 10"
  },
  "keywords": [
    "aem",
    "vite",
    "rollup",
    "plugin",
    "server",
    "proxy",
    "starter",
    "starter-kit",
    "build-tools"
  ],
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    "import": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "require": {
      "types": "./lib/index.d.cts",
      "default": "./lib/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        2,
        "always",
        300
      ]
    }
  },
  "dependencies": {
    "@aem-vite/import-rewriter": "^9.1.2",
    "@vitejs/plugin-react": "^5.1.4",
    "debug": "^4.4.0",
    "esbuild": "0.27.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "@vitejs/plugin-react": "^4.2.0 || ^5.0.0",
    "rollup": "^4.22.4",
    "vite": "^5.0.12 || ^6.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "@vitejs/plugin-react": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "fsevents": "~2.3.2"
  }
}
