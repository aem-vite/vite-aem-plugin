{
  "author": "Chris Shaw <me@cshaw.xyz>",
  "description": "A proxy server and starter kit for using Vite with Adobe Experience Manager.",
  "homepage": "https://aemvite.dev/guide/front-end/vite-plugin/",
  "license": "Apache-2.0",
  "name": "@aem-vite/vite-aem-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/aem-vite/vite-aem-plugin"
  },
  "bugs": {
    "url": "https://github.com/aem-vite/vite-aem-plugin/issues"
  },
  "version": "5.0.1",
  "type": "module",
  "engines": {
    "node": "^18.0.0 || >=20.0.0",
    "pnpm": ">= 8.5"
  },
  "keywords": [
    "aem",
    "vite",
    "rollup",
    "plugin",
    "server",
    "proxy",
    "starter",
    "starter-kit",
    "build-tools"
  ],
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    "import": {
      "default": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "require": {
      "default": "./lib/index.cjs",
      "types": "./lib/index.d.cts"
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint --ext .ts src/**",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        2,
        "always",
        300
      ]
    }
  },
  "dependencies": {
    "@aem-vite/import-rewriter": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "debug": "^4.3.4",
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.9.2",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "semantic-release": "^22.0.8",
    "tsup": "^8.0.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "rollup": "^4.2.0",
    "vite": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "@vitejs/plugin-react": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "fsevents": "~2.3.2"
  }
}
